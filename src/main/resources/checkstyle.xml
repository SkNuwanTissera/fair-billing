<?xml version="1.0"?>
<!DOCTYPE module PUBLIC
        "-//Checkstyle//DTD Checkstyle Configuration 1.3//EN"
        "https://checkstyle.org/dtds/configuration_1_3.dtd">

<module name="Checker">
    <!-- Define the coding standard -->
    <module name="TreeWalker">
        <!-- Ensure that all class names comply with the naming convention -->
        <module name="TypeName">
            <property name="format" value="^[A-Z][a-zA-Z0-9]*$"/>
        </module>

        <!-- Ensure that all method names comply with the naming convention -->
        <module name="MethodName">
            <property name="format" value="^[a-z][a-zA-Z0-9]*$"/>
        </module>

        <!-- Ensure that all variable names comply with the naming convention -->
        <module name="MemberName">
            <property name="format" value="^[a-z][a-zA-Z0-9]*$"/>
        </module>

        <!-- Ensure that all constant names comply with the naming convention -->
        <module name="ConstantName">
            <property name="format" value="^[A-Z][_A-Z0-9]*$"/>
        </module>

        <!-- Define rules for imports -->
        <module name="AvoidStarImport"/>
        <module name="RedundantImport"/>

        <!-- Define rules for class design -->
        <module name="OuterTypeFilename"/>

        <!-- Define rules for method design -->
        <module name="DesignForExtension"/>

        <!-- Define rules for miscellaneous -->
        <module name="RequireThis"/>
    </module>
</module>
